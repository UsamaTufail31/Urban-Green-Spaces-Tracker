# Development Environment Configuration for Urban Green Spaces API
# Copy this file to .env in your backend directory and modify as needed

# Database Configuration
DATABASE_URL=sqlite:///./urban_project.db

# Data Directories (create these directories on your system)
SATELLITE_DATA_DIR=./data/satellite
SHAPEFILE_DIR=./data/shapefiles
TEMP_DIR=./data/temp

# Processing Settings
NDVI_THRESHOLD=0.3
BATCH_SIZE=5
MAX_PROCESSING_TIME=1800

# Schedule Settings (Cron format: day_of_week 0=Monday, 6=Sunday)
WEEKLY_UPDATE_DAY=6
WEEKLY_UPDATE_HOUR=2
WEEKLY_UPDATE_MINUTE=0

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=urban_api.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# API Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000
API_HOST=127.0.0.1
API_PORT=8000

# Background Tasks
ENABLE_BACKGROUND_TASKS=true
MAX_CONCURRENT_UPDATES=2

# Cache Settings
CACHE_TTL_HOURS=168
CACHE_CLEANUP_HOUR=3

# Data Validation
VALIDATE_SATELLITE_DATA=true
MIN_COVERAGE_PERCENTAGE=0.0
MAX_COVERAGE_PERCENTAGE=100.0

# Performance Settings
MAX_RETRIES=3
RETRY_DELAY=300

# External API Keys (Sign up for free accounts to get these keys)
# OpenWeatherMap API for weather data: https://openweathermap.org/api
OPENWEATHER_API_KEY=5abfd3f997b74b52fb9718119ba7fd2c


# NewsAPI for recent city news: https://newsapi.org/
NEWS_API_KEY=7e0e3147a50641bda54d239f4350246f

# External Data Settings
ENABLE_EXTERNAL_DATA=true
EXTERNAL_API_TIMEOUT=10
EXTERNAL_API_CACHE_TTL=600